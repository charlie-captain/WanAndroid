<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/webviewBackgroundColor"
    android:orientation="vertical"
    tools:context=".view.activity.WebViewActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:fitsSystemWindows="true">

            <include layout="@layout/include_toolbar" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/webviewBackgroundColor"-->
    <!--/>-->


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/webviewBackgroundColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--<com.tencent.smtt.sdk.WebView-->
        <!--android:id="@+id/wb"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--&gt;-->
        <!--</com.tencent.smtt.sdk.WebView>-->


        <FrameLayout
            android:id="@+id/fl_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabtn_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="24dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/selector_like"
        app:borderWidth="0dp"
        app:layout_behavior="com.example.thatnight.wanandroid.view.customview.FloatingBehavior" />

</android.support.design.widget.CoordinatorLayout>
